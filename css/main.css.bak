@charset "utf-8";
#container{/* background-color: #f5f2ec; */}
.main-visual-wrap .bx-wrapper{border: none;box-shadow: none;background: none;margin-bottom: 0;}
.main-visual-wrap .bx-wrapper img{width: 100%;}
.main-visual-wrap .bx-wrapper .bx-pager.bx-default-pager a{width: 70px;border-radius:3px;height:8px;margin: 0 10px;}
.main-visual-wrap .bx-wrapper .bx-pager{padding-top: 0;bottom: 20px;text-align: center;}
.main-visual-wrap .bx-wrapper .bx-controls.bx-has-controls-auto.bx-has-pager .bx-pager{width: 100%; text-align: center;}
.main-visual-wrap .bx-wrapper .bx-pager.bx-default-pager a, .main-visual-wrap .bx-wrapper .bx-pager.bx-default-pager a:hover{background-color: #fff;}
.main-visual-wrap .bx-wrapper .bx-pager.bx-default-pager a.active, .main-visual-wrap .bx-wrapper .bx-pager.bx-default-pager a:focus{background-color: #d9442b;}

.content-1-wrap{width: 100%;background-color: #f5f2ec;padding-top: 50px;overflow: hidden;padding-bottom: 50px;}
.content-1{width: 1200px;margin: 0 auto;}
.content-1-txt{text-align: center;}
.content-1 h2{font-size: 40px;font-weight: bold;font-family: 'time new roman';margin-bottom: 10px;}
.content-1 p{margin-bottom: 20px;font-size: 15px;color: #666;}
.content-1 ul{width: 100%;}
.content-1 ul li{float: left;color: #666;text-align: center;margin-right: 15%;font-size: 15px;}
.content-1 ul li:last-child{margin-right: 0;}
.content-1 ul li a{display: block;width: 280px;height: 280px;-ms-border-radius: 50%;border-radius: 50%;padding-top: 95px;margin-bottom: 20px; background: url(../images/main/sandwich.jpg) no-repeat;background-size: cover;}


.content-2{position: relative;}
.content-2 p{position: absolute;top: 0;right: 0;}
